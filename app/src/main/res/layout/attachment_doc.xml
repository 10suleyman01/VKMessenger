<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="200dp">

	<ImageView
		android:id="@+id/documentIcon"
		android:layout_margin="4dp"
		android:src="@drawable/baseline_insert_drive_file_white_36"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/documentTitle"
		android:textColor="@color/primary_text"
		android:layout_margin="4dp"
		android:layout_toRightOf="@id/documentIcon"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/documentSize"
		android:layout_below="@id/documentTitle"
		android:layout_margin="4dp"
		android:layout_toRightOf="@id/documentIcon"/>

</RelativeLayout>

